@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

@model List<Pizza>

<div class="container" style="padding: 0 !important;">
    <div class="row pb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="ml-6">Menù</h1>
            </div>
        </div>
    </div>
    <div>
        @if (Model.Count == 0)
        {
            <p>Nessuna pizza presente nel menù.</p>
        }
        else
        {
            @foreach (var pizza in Model)
            {
                <div class="row mb-3">
                    <div class="col d-flex align-items-center fs-4 pb-2">
                        <div class="col-3">
                            <img src="~/img/@pizza.Image" style="width: 250px; height: 170px;" />
                        </div>
                        <div class="col-2 text-center fw-bold">
                            @pizza.Name
                        </div>
                        <div class="col-5 text-center">
                            Ingredienti: @pizza.Ingredients
                        </div>
                        <div class="col-1 text-center fw-bold">
                            @pizza.Price &euro;
                        </div>
                        <div class="col-1 text-center pl-4">
                            <a href="@Url.Action("Details", "Pizzeria", new { id = pizza.Id })" class="btn btn-primary">Dettagli</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>